<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.welcu.android.zxingfragmentlibsample"
    android:targetSandboxVersion="2"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="28" />

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature android:name="android.hardware.camera.flash" />

    <application android:debuggable="true" >
        <activity
            android:name="com.welcu.android.zxingfragmentlibsample.SampleActivity"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.welcu.android.zxingfragmentlibsample.SampleNestedFragmentActivity"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name="com.welcu.android.zxingfragmentlibsample.SampleStretchedActivity"
            android:theme="@style/AppTheme" />
    </application>

</manifest>